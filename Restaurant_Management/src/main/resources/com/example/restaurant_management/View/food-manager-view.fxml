<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../CSS/food-manager.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.restaurant_management.Controller.Manager.Food.FoodManagerController"
            AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

    <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        
        <!-- Main Content -->
        <VBox spacing="15" styleClass="content-view" VBox.vgrow="ALWAYS">
            <!-- Tiêu đề -->
            <Label styleClass="page-title" text="Quản lý món ăn" />

            <!-- Thanh công cụ -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtSearch" promptText="Tìm món ăn theo tên hoặc loại..." HBox.hgrow="ALWAYS" />
                <Button fx:id="btnSearch" styleClass="action-button" text="Tìm kiếm" />
                <Button fx:id="btnAdd" styleClass="add-button" text="Thêm món" />
            </HBox>

            <!-- Bảng danh sách món ăn -->
            <TableView fx:id="tblFoods" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="60" text="ID" />
                    <TableColumn fx:id="colName" prefWidth="200" text="Tên món" />
                    <TableColumn fx:id="colType" prefWidth="150" text="Loại món" />
                    <TableColumn fx:id="colPrice" prefWidth="100" text="Giá (VNĐ)" />
                    <TableColumn fx:id="colStatus" prefWidth="120" text="Trạng thái" />
                    <TableColumn fx:id="colActions" prefWidth="150" text="Hành động" />
                </columns>
            </TableView>

            <!-- Phân trang -->
            <Pagination fx:id="pagination" maxPageIndicatorCount="10" pageCount="1">
                <VBox.margin>
                    <Insets bottom="0" left="0" right="0" top="10" />
                </VBox.margin>
            </Pagination>
        </VBox>

        <!-- MODAL: Thêm món (overlay) -->
        <fx:include fx:id="addFoodModal" source="add-food-view.fxml" />
        <!-- MODAL: Sửa món (overlay) -->
        <fx:include fx:id="editFoodModal" source="edit-food-view.fxml" />

    </StackPane>
</AnchorPane>