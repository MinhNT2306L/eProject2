<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.restaurant_management.Controller.BillController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">

    <TableView fx:id="tblBill" prefWidth="400" prefHeight="300">
        <columns>
            <TableColumn fx:id="colMon" text="Món"/>
            <TableColumn fx:id="colSL" text="SL"/>
            <TableColumn fx:id="colGia" text="Đơn Giá"/>
            <TableColumn fx:id="colThanhTien" text="Thành Tiền"/>
        </columns>
    </TableView>

    <Label fx:id="lblTotal" text="Tổng tiền: 0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <!-- Gọi hàm handlePayment() trong BillController -->
    <Button text="Thanh Toán" onAction="#handlePayment"
            style="-fx-background-color: #009688; -fx-text-fill: white; -fx-padding: 8 20;"/>

</VBox>
