<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/24"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.restaurant_management.Controller.BillPreviewController"
            prefWidth="600" prefHeight="800"
            style="-fx-background-color: #ffffff;">
    <top>
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #2C3E50; -fx-padding: 20;">
            <Label text="LOCAL FOOD RESTAURANT" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="HÓA ĐƠN THANH TOÁN" 
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ECF0F1;"/>
            <Separator style="-fx-background-color: #ECF0F1;"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #ffffff;">
            <VBox fx:id="billContentContainer" spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 30;">
                <!-- Invoice Info -->
                <VBox spacing="8" style="-fx-background-color: #F8F9FA; -fx-padding: 15; -fx-background-radius: 8;">
                    <HBox spacing="10">
                        <Label text="Số hóa đơn:" style="-fx-font-weight: bold; -fx-min-width: 120;"/>
                        <Label fx:id="lblInvoiceNumber" text="#0000" style="-fx-text-fill: #E67E22; -fx-font-weight: bold;"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Bàn:" style="-fx-font-weight: bold; -fx-min-width: 120;"/>
                        <Label fx:id="lblTableNumber" text="-" style="-fx-text-fill: #34495E;"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Thời gian:" style="-fx-font-weight: bold; -fx-min-width: 120;"/>
                        <Label fx:id="lblDateTime" text="-" style="-fx-text-fill: #34495E;"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Phương thức:" style="-fx-font-weight: bold; -fx-min-width: 120;"/>
                        <Label fx:id="lblPaymentMethod" text="-" style="-fx-text-fill: #27AE60; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>

                <Separator/>

                <!-- Items Header -->
                <HBox spacing="10" style="-fx-background-color: #34495E; -fx-padding: 12; -fx-background-radius: 5;">
                    <Label text="Tên món" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-pref-width: 200;"/>
                    <Label text="SL" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-pref-width: 50; -fx-alignment: center;"/>
                    <Label text="Đơn giá" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-pref-width: 120; -fx-alignment: center-right;"/>
                    <Label text="Thành tiền" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-pref-width: 120; -fx-alignment: center-right;"/>
                </HBox>

                <!-- Items Container -->
                <VBox fx:id="itemsContainer" spacing="8"/>

                <Separator/>

                <!-- Total -->
                <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-padding: 15; -fx-background-color: #ECF0F1; -fx-background-radius: 8;">
                    <Label text="TỔNG CỘNG:" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <Label fx:id="lblTotalAmount" text="0 VND" 
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #E67E22;"/>
                </HBox>

                <Separator/>

                <!-- Footer -->
                <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20;">
                    <Label text="Cảm ơn quý khách đã sử dụng dịch vụ!" 
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #7F8C8D;"/>
                    <Label text="Hẹn gặp lại!" 
                           style="-fx-font-size: 14px; -fx-text-fill: #95A5A6;"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-background-color: #ECF0F1; -fx-padding: 20;">
            <Button text="In PDF" fx:id="btnPrintPDF"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12 30; -fx-background-radius: 8; -fx-font-weight: bold;"
                    onAction="#handlePrintPDF"/>
            <Button text="Đóng" fx:id="btnClose"
                    style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12 30; -fx-background-radius: 8;"
                    onAction="#handleClose"/>
        </HBox>
    </bottom>
</BorderPane>

