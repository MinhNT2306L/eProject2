<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurant_management.Controller.BillPreviewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="CHI TIẾT ĐƠN HÀNG">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <TextArea fx:id="billTextArea" editable="false" prefHeight="400.0" prefWidth="350.0" style="-fx-font-family: 'Monospaced';">
            <font>
                <Font name="Monospaced Regular" size="12.0" />
            </font>
        </TextArea>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="printButton" mnemonicParsing="false" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="In &amp; Lưu Hóa Đơn">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </Button>
                <Button fx:id="closeButton" mnemonicParsing="false" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" text="Đóng">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
