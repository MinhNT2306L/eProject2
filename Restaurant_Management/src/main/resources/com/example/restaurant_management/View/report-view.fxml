<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="reportContainer" spacing="20" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurant_management.Controller.ReportController">
   <padding>
      <Insets bottom="30" left="30" right="30" top="30" />
   </padding>
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="15">
         <Label styleClass="page-title" text="Báo Cáo Thống Kê Doanh Thu" />
      </HBox>

      <!-- Date Filter Section -->
      <VBox spacing="10" style="-fx-background-color: #F8F9FA; -fx-background-radius: 5; -fx-padding: 15;">
         <Label text="Lọc theo thời gian:" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Từ ngày:" />
            <DatePicker fx:id="startDatePicker" />
            <Label text="Đến ngày:" />
            <DatePicker fx:id="endDatePicker" />
            <Button fx:id="filterBtn" onAction="#loadReport" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-padding: 5 15;" text="Lọc" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="todayBtn" onAction="#setDateRangeToday" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-padding: 5 10;" text="Hôm nay" />
            <Button fx:id="weekBtn" onAction="#setDateRangeWeek" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-padding: 5 10;" text="7 ngày" />
            <Button fx:id="monthBtn" onAction="#setDateRangeMonth" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-padding: 5 10;" text="30 ngày" />
            <Button fx:id="yearBtn" onAction="#setDateRangeYear" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-padding: 5 10;" text="1 năm" />
         </HBox>
      </VBox>

      <!-- Summary Cards -->
      <HBox spacing="15">
         <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #3498DB; -fx-background-radius: 5; -fx-padding: 20;" HBox.hgrow="ALWAYS">
            <Label text="Tổng Doanh Thu" style="-fx-text-fill: white; -fx-font-size: 14px;" />
            <Label fx:id="totalRevenueLabel" text="0 VND" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
         </VBox>
         <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #27AE60; -fx-background-radius: 5; -fx-padding: 20;" HBox.hgrow="ALWAYS">
            <Label text="Tổng Số Hóa Đơn" style="-fx-text-fill: white; -fx-font-size: 14px;" />
            <Label fx:id="totalInvoicesLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
         </VBox>
         <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #E67E22; -fx-background-radius: 5; -fx-padding: 20;" HBox.hgrow="ALWAYS">
            <Label text="Giá Trị Đơn Trung Bình" style="-fx-text-fill: white; -fx-font-size: 14px;" />
            <Label fx:id="averageOrderLabel" text="0 VND" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
         </VBox>
      </HBox>

      <!-- Charts Section -->
      <VBox fx:id="chartContainer" spacing="20" />

      <!-- Tables Section -->
      <VBox fx:id="tableContainer" spacing="20" />
   </children>
</VBox>

