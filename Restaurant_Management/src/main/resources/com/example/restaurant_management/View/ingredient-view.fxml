<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="ingredientViewRoot" spacing="20" styleClass="content-view" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurant_management.Controller.IngredientController">
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label styleClass="page-title" text="Quản lý Nguyên Liệu" />
            <Button fx:id="addIngredientBtn" onAction="#displayAddIngredientForm" styleClass="add-button" text="Thêm Nguyên Liệu" />
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label styleClass="filter-label" text="Lọc theo thời gian:" />
            <ComboBox fx:id="ingredientFilterCombo" prefWidth="200.0" promptText="Tất cả" />
            <Button onAction="#handleIngredientRefresh" styleClass="secondary-button" text="Làm mới" />
        </HBox>
        <VBox fx:id="ingredientListContainer" spacing="10" styleClass="ingredient-list-container" />
    </children>
</VBox>

