<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="modalRoot" alignment="CENTER" styleClass="modal-overlay" style="-fx-background-color: rgba(0, 0, 0, 0.6); -fx-alignment: center;" visible="false" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurant_management.Controller.AddEmployeeController">

    <!-- Hộp trắng modal -->
    <VBox fx:id="modalContainer" alignment="CENTER" fillWidth="false" maxHeight="650.0" maxWidth="520" minWidth="520" prefHeight="650.0" prefWidth="520" spacing="20" styleClass="modal-container" style="-fx-alignment: center; -fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 20, 0, 0, 5);">
        <padding>
            <Insets bottom="30" left="35" right="35" top="30" />
        </padding>

        <!-- Tiêu đề -->
        <Label fx:id="titleLabel" alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50; -fx-padding: 0 0 15 0;" text="➕ Thêm Nhân Viên" />

        <!-- Form nhập với ScrollPane -->
        <ScrollPane fitToWidth="true" maxHeight="450" prefHeight="450" style="-fx-background: transparent; -fx-background-color: transparent; -fx-hbar-policy: never; -fx-vbar-policy: as-needed;">
            <VBox alignment="CENTER_LEFT" prefWidth="450" spacing="18">
                <!-- Username -->
                <VBox spacing="6">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Username *" />
                    <TextField fx:id="usernameField" prefHeight="42" prefWidth="450.0" promptText="Nhập username" styleClass="modal-text-field" />
                </VBox>
                
                <!-- Password -->
                <VBox spacing="6">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Password *" />
                    <PasswordField fx:id="passwordField" prefHeight="42" prefWidth="450.0" promptText="Nhập password" styleClass="modal-text-field" />
                </VBox>
                
                <!-- Họ tên -->
                <VBox spacing="6">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Họ tên *" />
                    <TextField fx:id="fullNameField" prefHeight="42" prefWidth="450.0" promptText="Nhập họ và tên" styleClass="modal-text-field" />
                </VBox>
                
                <!-- Số điện thoại và Email (cùng một hàng) -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Số điện thoại" />
                        <TextField fx:id="phoneField" prefHeight="42" prefWidth="217.0" promptText="Nhập số điện thoại" styleClass="modal-text-field" />
                    </VBox>
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Email" />
                        <TextField fx:id="emailField" prefHeight="42" prefWidth="217.0" promptText="Nhập email" styleClass="modal-text-field" />
                    </VBox>
                </HBox>
                
                <!-- Vai trò -->
                <VBox spacing="6">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Vai trò *" />
                    <ComboBox fx:id="roleComboBox" prefHeight="42" prefWidth="450.0" promptText="Chọn vai trò" styleClass="modal-comboBox" />
                </VBox>
            </VBox>
        </ScrollPane>

        <!-- Nút hành động -->
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15 0 0 0;">
            <Button onAction="#handleSave" prefHeight="45" prefWidth="150" styleClass="modal-button-save" text="Lưu" />
            <Button onAction="#handleCancel" prefHeight="45" prefWidth="150" styleClass="modal-button-cancel" text="Hủy" />
        </HBox>
    </VBox>
</StackPane>

