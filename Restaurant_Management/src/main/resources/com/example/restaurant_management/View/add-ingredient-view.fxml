<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="modalRoot" alignment="CENTER" styleClass="modal-overlay" style="-fx-background-color: rgba(0, 0, 0, 0.6); -fx-alignment: center;" visible="false" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurant_management.Controller.AddIngredientController">

    <!-- Hộp trắng modal -->
    <VBox fx:id="modalContainer" alignment="CENTER" fillWidth="false" maxHeight="680.0" maxWidth="520" minWidth="520" prefHeight="680.0" prefWidth="520" spacing="20" styleClass="modal-container" style="-fx-alignment: center; -fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 20, 0, 0, 5);">
        <padding>
            <Insets bottom="30" left="35" right="35" top="30" />
        </padding>

        <!-- Tiêu đề -->
        <Label fx:id="titleLabel" alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50; -fx-padding: 0 0 15 0;" text="➕ Thêm Nguyên Liệu" />

        <!-- Form nhập với ScrollPane -->
        <ScrollPane fitToWidth="true" maxHeight="480" prefHeight="480" style="-fx-background: transparent; -fx-background-color: transparent; -fx-hbar-policy: never; -fx-vbar-policy: as-needed;">
            <VBox alignment="CENTER_LEFT" prefWidth="450" spacing="18">
                <!-- Tên nguyên liệu -->
                <VBox spacing="6">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Tên nguyên liệu *" />
                    <TextField fx:id="ingredientNameField" prefHeight="42" prefWidth="450.0" promptText="Nhập tên nguyên liệu" styleClass="modal-text-field" />
                </VBox>
                
                <!-- Số lượng và Đơn vị (cùng một hàng) -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Số lượng *" />
                        <TextField fx:id="quantityField" prefHeight="42" prefWidth="200.0" promptText="0.00" styleClass="modal-text-field" />
                    </VBox>
                    <VBox spacing="6" prefWidth="150">
                        <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Đơn vị *" />
                        <ComboBox fx:id="unitComboBox" prefHeight="42" prefWidth="150.0" promptText="Chọn đơn vị" styleClass="modal-comboBox" />
                    </VBox>
                </HBox>
                
                <!-- Nhà cung cấp -->
                <VBox spacing="6">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Nhà cung cấp" />
                    <TextField fx:id="supplierField" prefHeight="42" prefWidth="450.0" promptText="Nhập tên nhà cung cấp" styleClass="modal-text-field" />
                </VBox>
                
                <!-- Ngày nhập và Ngày hết hạn (cùng một hàng) -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Ngày nhập" />
                        <DatePicker fx:id="importDatePicker" prefHeight="42" prefWidth="217.0" styleClass="modal-date-picker" />
                    </VBox>
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Ngày hết hạn" />
                        <DatePicker fx:id="expiryDatePicker" prefHeight="42" prefWidth="217.0" styleClass="modal-date-picker" />
                    </VBox>
                </HBox>
                
                <!-- Trạng thái -->
                <VBox spacing="6">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Trạng thái *" />
                    <ComboBox fx:id="statusComboBox" prefHeight="42" prefWidth="450.0" promptText="Chọn trạng thái" styleClass="modal-comboBox" />
                </VBox>
            </VBox>
        </ScrollPane>

        <!-- Nút hành động -->
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15 0 0 0;">
            <Button onAction="#handleSave" prefHeight="45" prefWidth="150" styleClass="modal-button-save" text="Lưu" />
            <Button onAction="#handleCancel" prefHeight="45" prefWidth="150" styleClass="modal-button-cancel" text="Hủy" />
        </HBox>
    </VBox>
</StackPane>

