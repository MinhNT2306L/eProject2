<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="employeeViewRoot" spacing="20" styleClass="content-view" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurant_management.Controller.EmployeeController">
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label styleClass="page-title" text="Quản lý Nhân Viên" />
            <Button fx:id="addEmployeeBtn" onAction="#displayAddEmployeeForm" styleClass="add-button" text="Thêm Nhân Viên" />
        </HBox>
        <VBox fx:id="employeeListContainer" spacing="10" styleClass="employee-list-container" />
    </children>
</VBox>

