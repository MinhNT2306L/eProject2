<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="modal" alignment="CENTER" styleClass="modal-overlay" visible="false" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurant_management.Controller.Manager.Food.EditFoodController">

    <VBox alignment="CENTER" maxHeight="500.0" maxWidth="420" prefHeight="500.0" spacing="12" styleClass="modal-content">
        <padding><Insets bottom="20" left="25" right="25" top="20" /></padding>

        <Label styleClass="modal-title" text="Sửa món ăn" />

        <TextField fx:id="txtName" promptText="Tên món ăn *" />
        <TextField fx:id="txtCategory" promptText="Loại món" />
        <TextField fx:id="txtPrice" promptText="Giá (VNĐ) *" />
        <TextArea fx:id="txtDescription" prefRowCount="3" promptText="Mô tả..." wrapText="true" />
        <ComboBox fx:id="cbStatus" promptText="Trạng thái" />

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="btnCancel" styleClass="cancel-btn" text="Hủy" />
            <Button fx:id="btnSave" onAction="#saveFood" styleClass="save-btn" text="Cập nhật" />
        </HBox>
    </VBox>
</StackPane>
